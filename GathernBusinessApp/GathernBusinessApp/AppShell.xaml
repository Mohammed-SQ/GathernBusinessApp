<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:GathernBusinessApp"
       x:Class="GathernBusinessApp.AppShell">
    <ShellContent Title="Splash"
                  ContentTemplate="{DataTemplate local:SplashPage}"
                  Route="SplashPage"
                  IsVisible="True"/>
    <!-- Ensure this is visible -->
    <ShellContent Title="Main"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage"/>
    <ShellContent Title="Dashboard"
                  ContentTemplate="{DataTemplate local:DashboardPage}"
                  Route="DashboardPage"/>
    <ShellContent Title="AddProperty"
                  ContentTemplate="{DataTemplate local:AddPropertyPage}"
                  Route="AddPropertyPage"/>
    <ShellContent Title="Bookings"
                  ContentTemplate="{DataTemplate local:BookingsPage}"
                  Route="BookingsPage"/>
</Shell>