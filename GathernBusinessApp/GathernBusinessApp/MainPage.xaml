<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GathernBusinessApp.MainPage"
    BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="StartAndExpand"
            Spacing="40"
            Padding="75">

            <!-- Logo -->
            <Image
                Source="logo.jpg"
                WidthRequest="350"
                HeightRequest="90"
                Aspect="AspectFit"
                HorizontalOptions="Center" />

            <!-- Purple underline -->
            <BoxView
                Color="#6200EE"
                HeightRequest="4"
                WidthRequest="150"
                HorizontalOptions="Center" />

            <!-- Text container as wide as underline -->
            <StackLayout
                WidthRequest="335"
                HorizontalOptions="Center"
                Spacing="40">

                <!-- Right-aligned greeting -->
                <Label
                    Text="تو ما اسفرت&#10;تو ما انورت&#10;تو ما استهلت و امطرت"
                    FontSize="24"
                    TextColor="Black"
                    HorizontalTextAlignment="End" />

                <!-- Right-aligned welcome -->
                <Label
                    Text="حيّا الله من سجل معنا"
                    FontSize="28"
                    FontAttributes="Bold"
                    TextColor="Black"
                    HorizontalTextAlignment="End" />
            </StackLayout>

            <!-- Spacer -->
            <Label HeightRequest="200" Text="" />

            <!-- Buttons -->
            <Button
                Text="أعرف الي لك و اللي عليك"
                FontSize="22"
                BackgroundColor="#6200EE"
                TextColor="White"
                CornerRadius="12"
                Padding="15"
                WidthRequest="400"
                HorizontalOptions="Center"
                Clicked="OnExploreClicked" />

            <Button
                Text="سجل عقارك على طول"
                FontSize="22"
                BackgroundColor="White"
                TextColor="#6200EE"
                BorderColor="#6200EE"
                BorderWidth="2"
                CornerRadius="12"
                Padding="15"
                WidthRequest="400"
                HorizontalOptions="Center"
                Clicked="OnAddPropertyClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
