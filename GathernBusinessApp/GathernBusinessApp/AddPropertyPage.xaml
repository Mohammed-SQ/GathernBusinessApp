<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GathernBusinessApp.AddPropertyPage"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False"
    FlowDirection="RightToLeft">

    <!-- Root grid: scrollable content + fixed bottom bar -->
    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <HorizontalStackLayout HorizontalOptions="Center" Padding="0,60">
                <VerticalStackLayout WidthRequest="500" Spacing="30">

                    <!-- HEADER (shared, always on top) -->
                    <Grid
                        ColumnDefinitions="*,Auto"
                        FlowDirection="LeftToRight"
                        Padding="20,10">

                        <!-- Page title centered -->
                        <Label
                            Grid.Column="0"
                            x:Name="TitleLabel"
                            Text="معلومات العقار"
                            FontSize="35"
                            FontAttributes="Bold"
                            TextColor="Black"
                            VerticalOptions="Center"
                            HorizontalOptions="End" />

                        <!-- Back arrow on the right -->
                        <Button
                            Grid.Column="1"
                            x:Name="BackButton"
                            Text=">"
                            Margin="0,0,-15,-20"
                            FontSize="35"
                            FontAttributes="Bold"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            WidthRequest="40"
                            Clicked="OnBackClicked"
                            VerticalOptions="Center"
                            HorizontalOptions="End" />
                    </Grid>

                    <!-- STEP 1: Property Name + Category Selection -->
                    <VerticalStackLayout
                        x:Name="Step1"
                        Spacing="16"
                        Padding="20,0"
                        IsVisible="True">

                        <!-- Property Name -->
                        <Label
                            Text="اسم عقارك"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            HorizontalOptions="Start" />

                        <Entry
                            x:Name="PropertyNameEntry"
                            Text="فندق"
                            Placeholder="أدخل اسم العقار"
                            FontSize="14"
                            TextColor="Black"
                            BackgroundColor="#F5F5F5"
                            HeightRequest="50"
                            HorizontalOptions="Fill" />

                        <!-- Category Labels -->
                        <Label
                            Text="تصنيف عقارك"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="Black"
                            HorizontalOptions="Start" />
                        <Label
                            Text="حدد التصنيف المناسب"
                            FontSize="14"
                            TextColor="Gray"
                            HorizontalOptions="Start" />

                        <!-- 3×3 Category Grid -->
                        <CollectionView
                            x:Name="CategoryGrid"
                            SelectionMode="Single"
                            HeightRequest="500" 
                            HorizontalOptions="Center">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    Orientation="Vertical"
                                    Span="3"
                                    HorizontalItemSpacing="0" 
                                    VerticalItemSpacing="0"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        BackgroundColor="#F5F5F5"
                                        Stroke="Transparent"
                                        Padding="0"
                                        HeightRequest="140" 
                                        WidthRequest="140">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="15" />
                                        </Border.StrokeShape>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal" />
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Property="Stroke" Value="#6200EE" />
                                                        <Setter Property="StrokeThickness" Value="4" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Grid>
                                            <Image Source="{Binding Image}" Aspect="AspectFill" HeightRequest="140" WidthRequest="140" VerticalOptions="Center" HorizontalOptions="Center" />
                                            <Label
                                                Text="{Binding Name}"
                                                TextColor="White"
                                                FontSize="20" 
                                                HorizontalOptions="Start"
                                                VerticalOptions="End"
                                                Margin="8" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- STEP 2: Property Location -->
                    <VerticalStackLayout
                        x:Name="Step2"
                        Spacing="24"
                        Padding="10,0"
                        IsVisible="False"
                        FlowDirection="RightToLeft">

                        <!-- CITY -->
                        <Label
                            Text="المدينة"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="Black" />

                        <Border
                            BackgroundColor="#F5F5F5"
                            Stroke="#E0E0E0"
                            StrokeThickness="2">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*" HeightRequest="50">
                                <!-- City Picker -->
                                <Picker
                                    x:Name="CityPicker"
                                    FontSize="16"
                                    TextColor="Black"
                                    BackgroundColor="Transparent"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Fill"
                                    Grid.Column="0"
                                    Margin="0">
                                    <Picker.Items>
                                        <x:String>الرياض</x:String>
                                        <x:String>جدة</x:String>
                                        <x:String>مكة المكرمة</x:String>
                                        <x:String>المدينة المنورة</x:String>
                                        <x:String>الدمام</x:String>
                                        <x:String>الخبر</x:String>
                                        <x:String>الطائف</x:String>
                                        <x:String>أبها</x:String>
                                        <x:String>تبوك</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Grid>
                        </Border>

                        <!-- DISTRICT -->
                        <Label
                            Text="الحي"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="Black" />

                        <Border
                            BackgroundColor="#F5F5F5"
                            Stroke="#E0E0E0"
                            StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*" HeightRequest="50">
                                <Label
                                    Text="-"
                                    TextColor="Black"
                                    FontSize="40"
                                    Margin="20,-10"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Start"
                                    Grid.Column="0" />
                            </Grid>
                        </Border>

                        <!-- DIRECTION -->
                        <Label
                            Text="الاتجاه"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="Black" />

                        <Border
                            BackgroundColor="#F5F5F5"
                            Stroke="#E0E0E0"
                            StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="*" HeightRequest="50">
                                <!-- Direction Picker -->
                                <Picker
                                    x:Name="DirectionPicker"
                                    FontSize="16"
                                    TextColor="Black"
                                    BackgroundColor="Transparent"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Fill"
                                    Grid.Column="0"
                                    Margin="0">
                                    <Picker.Items>
                                        <x:String>الشمال الشرقي</x:String>
                                        <x:String>الجنوب الغربي</x:String>
                                        <x:String>الشمال الغربي</x:String>
                                        <x:String>الجنوب الشرقي</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <!-- STEP 3: Property Details -->
                    <VerticalStackLayout
    x:Name="Step3"
    Spacing="16"
    Padding="20,0"
    IsVisible="False"
    FlowDirection="RightToLeft">

                        <!-- Area row: [مساحة عقارك] [Entry] [متر مربع], centered -->
                        <Grid
        HorizontalOptions="Start"
        ColumnDefinitions="Auto,Auto,Auto"
        ColumnSpacing="40">
                            <!-- right label -->
                            <Label
            Grid.Column="0"
            Text="مساحة عقارك"
            FontSize="16"
            FontAttributes="Bold"
            VerticalOptions="Center"
            TextColor="Black" />

                            <!-- Entry framed -->
                            <Frame
            Grid.Column="1"
            WidthRequest="120"
            HeightRequest="50"
            BackgroundColor="#F5F5F5"
            BorderColor="#E0E0E0"
            CornerRadius="12"
            HasShadow="False"
            Padding="8"
            VerticalOptions="Center"
            HorizontalOptions="Center">
                                <Entry
                x:Name="PropertyAreaEntry"
                Text="250"
                Keyboard="Numeric"
                FontSize="20"
                Margin="0,-8"
                TextColor="Black"
                BackgroundColor="Transparent"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Start" />
                            </Frame>

                            <!-- left label -->
                            <Label
            Grid.Column="2"
            Text="متر مربع"
            FontSize="16"
            VerticalOptions="Center"
            TextColor="Black" />
                        </Grid>

                        <!-- thin divider -->
                        <BoxView
        HeightRequest="1"
        Color="#E0E0E0"
        HorizontalOptions="Fill" />

                        <!-- Amenities headers -->
                        <Label
        Text="مرافق عقارك الرئيسية"
        FontSize="19"
        FontAttributes="Bold"
        TextColor="Black" />
                        <Label
        Text="اختر كل المرافق الموجودة في عقارك"
        FontSize="16"
        TextColor="Gray" />

                        <!-- Amenity cards in a 3×2 grid -->
                        <Grid
        ColumnDefinitions="*,*,*"
        RowDefinitions="Auto,Auto"
        ColumnSpacing="15" 
        RowSpacing="15"
        Padding="0,8">

                            <!-- Row 0, Col 0: Pool -->
                            <Frame
            x:Name="AmenityPool"
            Grid.Row="0" Grid.Column="0"
            Padding="0"
            HasShadow="False"
            CornerRadius="15" 
            BackgroundColor="#6200EE"
            WidthRequest="140"
            HeightRequest="140">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout
                Spacing="8" 
                HorizontalOptions="Center"
                VerticalOptions="Center">
                                    <Label Text="🏊" FontSize="60" TextColor="#6200EE" HorizontalOptions="Center" />
                                    <Label Text="مسبح" FontSize="20" TextColor="#6200EE" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Row 0, Col 1: Living Room -->
                            <Frame
            x:Name="AmenityParking"
            Grid.Row="0" Grid.Column="1"
            Padding="0"
            HasShadow="False"
            CornerRadius="15" 
            BackgroundColor="#6200EE"
            WidthRequest="140"
            HeightRequest="140">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout
                Spacing="8" 
                HorizontalOptions="Center"
                VerticalOptions="Center">
                                    <Label Text="🛋️" FontSize="60" TextColor="#6200EE" HorizontalOptions="Center" />
                                    <Label Text="مجلس" FontSize="20" TextColor="#6200EE" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Row 0, Col 2: Bedroom -->
                            <Frame
            x:Name="AmenityBed"
            Grid.Row="0" Grid.Column="2"
            Padding="0"
            HasShadow="False"
            CornerRadius="15" 
            BackgroundColor="#6200EE"
            WidthRequest="140"
            HeightRequest="140">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout
                Spacing="8" 
                HorizontalOptions="Center"
                VerticalOptions="Center">
                                    <Label Text="🛏️" FontSize="60" TextColor="#6200EE" HorizontalOptions="Center" />
                                    <Label Text="غرفة نوم" FontSize="20" TextColor="#6200EE" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Row 1, Col 0: Bathroom -->
                            <Frame
            x:Name="AmenityBathroom"
            Grid.Row="1" Grid.Column="0"
            Padding="0"
            HasShadow="False"
            CornerRadius="15" 
            BackgroundColor="#6200EE"
            WidthRequest="140"
            HeightRequest="140">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout
                Spacing="8" 
                HorizontalOptions="Center"
                VerticalOptions="Center">
                                    <Label Text="🚿" FontSize="60" TextColor="#6200EE" HorizontalOptions="Center" />
                                    <Label Text="دورة مياه" FontSize="20" TextColor="#6200EE" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Row 1, Col 1: Kitchen -->
                            <Frame
            x:Name="AmenityKitchen"
            Grid.Row="1" Grid.Column="1"
            Padding="0"
            HasShadow="False"
            CornerRadius="15" 
            BackgroundColor="#6200EE"
            WidthRequest="140"
            HeightRequest="140">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout
                Spacing="8" 
                HorizontalOptions="Center"
                VerticalOptions="Center">
                                    <Label Text="🍳" FontSize="60" TextColor="#6200EE" HorizontalOptions="Center" />
                                    <Label Text="مطبخ" FontSize="20" TextColor="#6200EE" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- STEP 4: Bedroom & Family Counts -->
                    <VerticalStackLayout
                        x:Name="Step4"
                        Spacing="24"
                        Padding="20,0"
                        IsVisible="False"
                        FlowDirection="RightToLeft">

                        <!-- Bedrooms -->
                        <Grid
                            ColumnDefinitions="*,Auto,Auto,Auto"
                            ColumnSpacing="16">
                            <Label
                                Grid.Column="0"
                                Text="عدد غرف النوم"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextColor="Black" />
                            <!-- PLUS -->
                            <Button
                                Grid.Column="3"
                                x:Name="IncrementBedroomsButton"
                                Text="+"
                                FontSize="20"
                                TextColor="#6200EE"
                                BackgroundColor="Transparent"
                                Clicked="OnIncrementBedroomsClicked" />
                            <!-- CURRENT COUNT -->
                            <Frame
                                Grid.Column="2"
                                WidthRequest="80"
                                HeightRequest="50"
                                BackgroundColor="#F5F5F5"
                                BorderColor="#E0E0E0"
                                CornerRadius="12"
                                HasShadow="False"
                                VerticalOptions="Center">
                                <Label
                                    x:Name="BedroomsCountLabel"
                                    Text="2"
                                    FontSize="18"
                                    Margin="0,-15"
                                    TextColor="Black"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />
                            </Frame>
                            <!-- MINUS -->
                            <Button
                                Grid.Column="1"
                                x:Name="DecrementBedroomsButton"
                                Text="−"
                                FontSize="20"
                                TextColor="#6200EE"
                                BackgroundColor="Transparent"
                                Clicked="OnDecrementBedroomsClicked" />
                        </Grid>

                        <!-- Single-family units -->
                        <Grid
                            ColumnDefinitions="*,Auto,Auto,Auto"
                            ColumnSpacing="16">
                            <Label
                                Grid.Column="0"
                                Text="عدد الأسرة المفردة"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextColor="Black" />
                            <Button
                                Grid.Column="3"
                                x:Name="IncrementSingleButton"
                                Text="+"
                                FontSize="20"
                                TextColor="#6200EE"
                                BackgroundColor="Transparent"
                                Clicked="OnIncrementSingleClicked" />
                            <Frame
                                Grid.Column="2"
                                WidthRequest="80"
                                HeightRequest="50"
                                BackgroundColor="#F5F5F5"
                                BorderColor="#E0E0E0"
                                CornerRadius="12"
                                HasShadow="False"
                                VerticalOptions="Center">
                                <Label
                                    x:Name="SingleCountLabel"
                                    Text="1"
                                    FontSize="18"
                                    Margin="0,-15"
                                    TextColor="Black"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />
                            </Frame>
                            <Button
                                Grid.Column="1"
                                x:Name="DecrementSingleButton"
                                Text="−"
                                FontSize="20"
                                TextColor="#6200EE"
                                BackgroundColor="Transparent"
                                Clicked="OnDecrementSingleClicked" />
                        </Grid>

                        <!-- Master-family units -->
                        <Grid
                            ColumnDefinitions="*,Auto,Auto,Auto"
                            ColumnSpacing="16">
                            <Label
                                Grid.Column="0"
                                Text="عدد الأسرة الرئيسية"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextColor="Black" />
                            <Button
                                Grid.Column="3"
                                x:Name="IncrementMasterButton"
                                Text="+"
                                FontSize="20"
                                TextColor="#6200EE"
                                BackgroundColor="Transparent"
                                Clicked="OnIncrementMasterClicked" />
                            <Frame
                                Grid.Column="2"
                                WidthRequest="80"
                                HeightRequest="50"
                                BackgroundColor="#F5F5F5"
                                BorderColor="#E0E0E0"
                                CornerRadius="12"
                                HasShadow="False"
                                VerticalOptions="Center">
                                <Label
                                    x:Name="MasterCountLabel"
                                    Text="1"
                                    FontSize="18"
                                    TextColor="Black"
                                    Margin="0,-15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />
                            </Frame>
                            <Button
                                Grid.Column="1"
                                x:Name="DecrementMasterButton"
                                Text="−"
                                FontSize="20"
                                TextColor="#6200EE"
                                BackgroundColor="Transparent"
                                Clicked="OnDecrementMasterClicked" />
                        </Grid>
                    </VerticalStackLayout>

                    <!-- STEP 5: Bathroom Counts -->
                    <VerticalStackLayout
    x:Name="Step5"
    Spacing="16"
    Padding="20,0"
    IsVisible="False"
    FlowDirection="RightToLeft">

                        <Grid
        ColumnDefinitions="*,Auto,Auto,Auto"
        ColumnSpacing="16"
        VerticalOptions="Center">

                            <!-- Label -->
                            <Label
            Grid.Column="0"
            Text="عدد دورات المياه"
            FontSize="18"
            FontAttributes="Bold"
            TextColor="Black"
            VerticalOptions="Center" />

                            <!-- Plus Button -->
                            <Button
            Grid.Column="3"
            x:Name="IncrementBathroomButton"
            Text="+"
            FontSize="20"
            TextColor="#6200EE"
            BackgroundColor="Transparent"
            Clicked="OnIncrementBathroomClicked"
            VerticalOptions="Center" />

                            <!-- Count Frame -->
                            <Frame
            Grid.Column="2"
            WidthRequest="80"
            HeightRequest="50"
            BackgroundColor="#F5F5F5"
            BorderColor="#E0E0E0"
            CornerRadius="12"
            HasShadow="False"
            VerticalOptions="Center"
            HorizontalOptions="Center">
                                <Label
                x:Name="BathroomCountLabel"
                Text="1"
                FontSize="18"
                Margin="0,-15"
                TextColor="Black"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
                            </Frame>

                            <!-- Minus Button -->
                            <Button
            Grid.Column="1"
            x:Name="DecrementBathroomButton"
            Text="−"
            FontSize="20"
            TextColor="#6200EE"
            BackgroundColor="Transparent"
            Clicked="OnDecrementBathroomClicked"
            VerticalOptions="Center" />
                        </Grid>

                        <!-- Bathroom Amenities Header -->
                        <Label
        Text="مرافق دورات المياه"
        FontSize="18"
        FontAttributes="Bold"
        TextColor="Black"
        Margin="0,20,0,5" />

                        <!-- Bathroom Amenities Selection -->
                        <FlexLayout
        Wrap="Wrap"
        JustifyContent="Start"
        AlignItems="Center"
    Margin="0,0,0,20"
       >
                            <!-- Banio / Bathtub -->
                            <Frame
            x:Name="AmenityBanio"
            Padding="10"
            HasShadow="False"
            CornerRadius="20"
            BackgroundColor="#6200EE"
            WidthRequest="200"
                                 Margin="2"
            HeightRequest="54">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" CommandParameter="Banio" />
                                </Frame.GestureRecognizers>
                                <HorizontalStackLayout
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="8">
                                    <Label Text="بانيو / حوض استحمام" FontSize="20" TextColor="White" />
                                </HorizontalStackLayout>
                            </Frame>

                            <!-- Jacuzzi -->
                            <Frame
            x:Name="AmenityJacuzzi"
            Padding="0"
            HasShadow="False"
            CornerRadius="20"
            BackgroundColor="#6200EE"
            WidthRequest="100"
            Margin="2"
            HeightRequest="54">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" CommandParameter="Jacuzzi" />
                                </Frame.GestureRecognizers>
                                <Label
                Text="جاكوزي"
                FontSize="20"
                TextColor="White"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
                            </Frame>

                            <!-- Shower -->
                            <Frame
            x:Name="AmenityShower"
            Padding="0"
            HasShadow="False"
            CornerRadius="20"
            BackgroundColor="Transparent"
            BorderColor="#6200EE"
            WidthRequest="70"
            Margin="2"
            HeightRequest="54">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" CommandParameter="Shower" />
                                </Frame.GestureRecognizers>
                                <Label
                Text="دش"
                FontSize="20"
                TextColor="#6200EE"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
                            </Frame>

                            <!-- Bathrobe -->
                            <Frame
            x:Name="AmenityBathrobe"
            Padding="0"
            HasShadow="False"
            CornerRadius="20"
            BackgroundColor="Transparent"
            BorderColor="#6200EE"
            WidthRequest="100"
            Margin="2"
            HeightRequest="54">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" CommandParameter="Bathrobe" />
                                </Frame.GestureRecognizers>
                                <Label
                Text="رداء حمام"
                FontSize="20"
                TextColor="#6200EE"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
                            </Frame>

                            <!-- Sauna -->
                            <Frame
            x:Name="AmenitySauna"
            Padding="0"
            HasShadow="False"
            CornerRadius="20"
            Margin="2"
            BackgroundColor="Transparent"
            BorderColor="#6200EE"
            WidthRequest="85"
            HeightRequest="54">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" CommandParameter="Sauna" />
                                </Frame.GestureRecognizers>
                                <Label
                Text="ساونا"
                FontSize="20"
                TextColor="#6200EE"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
                            </Frame>

                            <!-- Slippers -->
                            <Frame
x:Name="AmenitySlippers"
Padding="0"
HasShadow="False"
CornerRadius="20"
Margin="2"
BackgroundColor="#6200EE"
WidthRequest="80"
HeightRequest="54">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" CommandParameter="Slippers" />
                                </Frame.GestureRecognizers>
                                <Label
    Text="سلبير"
    FontSize="20"
    TextColor="White"
    VerticalOptions="Center"
    HorizontalOptions="Center" />
                            </Frame>

                            <!-- Shampoo -->
                            <Frame
            x:Name="AmenityShampoo"
            Padding="0"
            HasShadow="False"
            CornerRadius="20"
            BackgroundColor="Transparent"
            BorderColor="#6200EE"
            WidthRequest="80"
            Margin="2"
            HeightRequest="54">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" CommandParameter="Shampoo" />
                                </Frame.GestureRecognizers>
                                <Label
                Text="شامبو"
                FontSize="20"
                TextColor="#6200EE"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
                            </Frame>

                            <!-- Soap -->
                            <Frame
            x:Name="AmenitySoap"
            Padding="0"
            HasShadow="False"
            CornerRadius="20"
            BackgroundColor="Transparent"
            BorderColor="#6200EE"
            WidthRequest="80"
            Margin="2"
            HeightRequest="54">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAmenityTapped" CommandParameter="Soap" />
                                </Frame.GestureRecognizers>
                                <Label
                Text="صابون"
                FontSize="20"
