<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GathernBusinessApp.BoardingPage"
    BackgroundColor="White"
    WidthRequest="500"
    FlowDirection="RightToLeft">

    <ScrollView>
        <VerticalStackLayout
        VerticalOptions="StartAndExpand" 
            HorizontalOptions="Center"
        Spacing="30"
        Padding="0,60">

            <!-- Logo -->
            <Image
        Source="logo.jpg"
        Aspect="AspectFit"
        WidthRequest="450"
        HeightRequest="100"
        HorizontalOptions="Center"
        Margin="0,0,0,16" />

            <!-- Purple underline -->
            <BoxView
        Color="#6200EE"
        HeightRequest="3"
        WidthRequest="100"
        HorizontalOptions="Center"
        Margin="0,0,0,0" />

            <!-- Title -->
            <Label
        Text="سجل وأجر عقارك معنا"
        FontSize="28"
        TextColor="Black"
        HorizontalOptions="Center"
        HorizontalTextAlignment="Center"
        Margin="0,0,0,240" />

            <!-- Primary Button -->
            <Button
        Text="سجل عقارك"
        FontSize="20"
        BackgroundColor="#6200EE"
        TextColor="White"
        FontAttributes="Bold" 
        CornerRadius="14"
        HeightRequest="60"
        WidthRequest="375"
        HorizontalOptions="Center"
        Margin="0,0,0,16"
        Clicked="OnRegisterPropertyClicked" />

            <!-- Secondary Button -->
            <Button
        Text="سجل دخولك لتطبيق المضيفين"
        FontSize="20"
        BackgroundColor="White"
        FontAttributes="Bold" 
        TextColor="#6200EE"
        BorderColor="#6200EE"
        BorderWidth="2"
        CornerRadius="14"
        HeightRequest="60"
        WidthRequest="375"
        HorizontalOptions="Center"
        Margin="0,0,0,24"
        Clicked="OnSignInClicked" />

            <!-- Divider -->
            <BoxView
        Color="Black"
        HeightRequest="2"
        WidthRequest="140"
        HorizontalOptions="Center"
        Margin="0,0,0,24" />

            <!-- Footer text, two lines -->
            <Label
        FontSize="21"
        TextColor="Gray"
        HorizontalOptions="Center"
        HorizontalTextAlignment="Center"
        HeightRequest="60" 
                Margin="0,0,0,24">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="تبي تحجز شقة، شاليه، وغيرها من بيوت العطلات؟" TextColor="Gray"/>
                        <Span Text="&#x0A;" />
                        <Span Text="حمل من هنا " TextColor="Gray"/>
                        <Span
              Text="تطبيق جاهزٍ للضيوف"
              TextColor="#6200EE"
              FontAttributes="Bold"
              TextDecorations="Underline"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>