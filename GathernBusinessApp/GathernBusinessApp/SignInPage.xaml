<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GathernBusinessApp.SignInPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White"
    FlowDirection="RightToLeft"
    Padding="20">

    <ScrollView>
        <VerticalStackLayout
      Spacing="30"
      VerticalOptions="StartAndExpand"
      HorizontalOptions="Center"
      Padding="0,20">

            <!-- Top bar: back button + title -->
            <!-- 1) Page Title -->
            <Button
          x:Name="BackButton"
          Grid.Column="0"
          Text="‹"
          FontSize="54"
          BackgroundColor="Transparent"
          Clicked="OnBackTapped"
          HorizontalOptions="Start" />
            <Label
  Text="ادخل رقم الجوال"
  FontSize="38"
  FontAttributes="Bold"
  TextColor="Black"
  HorizontalOptions="Start"
  Margin="0,0,0,5" />

            <!-- 2) Two-line Subtitle -->
            <Label
  Text="سوف يصلك رمز التحقق لتسجيل الدخول
أو إنشاء حساب جديد"
  FontSize="22"
  TextColor="Gray"
  HorizontalTextAlignment="Center"
  HorizontalOptions="Start"
  Margin="0,0,0,20" />


            <!-- 3) Phone Entry Frame -->
            <Frame
    CornerRadius="12"
    BorderColor="#E0E0E0"
    BackgroundColor="#F5F5F5"
    HasShadow="False"
    WidthRequest="500"
    HorizontalOptions="Center">
                <Grid ColumnDefinitions="*,Auto,Auto" Padding="10,0">

                    <!-- a) The phone Entry on the left -->
                    <Entry
        x:Name="PhoneEntry"
        Grid.Column="0"
        Placeholder="5XXXXXXXX"
        Keyboard="Telephone"
        FontSize="18"
        TextColor="Black"
        BackgroundColor="Transparent"
        MaxLength="9"
        HorizontalTextAlignment="End"
        CursorPosition="0"
        TextChanged="OnPhoneEntryTextChanged"
        VerticalOptions="Center" />

                    <!-- b) Country code next -->
                    <Label
        Grid.Column="1"
        Text="+966"
        FontSize="20"
        TextColor="Black"
        VerticalOptions="Center"
        Margin="8,0" />

                    <!-- c) Flag on the far right -->
                    <Image
        Source="sa_flag.png"
        Grid.Column="2"
        WidthRequest="40"
        HeightRequest="24"
        VerticalOptions="Center" />
                </Grid>
            </Frame>
    


            <!-- 4) Continue Button -->
            <Button
  x:Name="ContinueButton"
  Text="المتابعة"
  FontSize="20"
  CornerRadius="12"
  HeightRequest="50"
  WidthRequest="500"
  BackgroundColor="Gray"
  TextColor="White"
  IsEnabled="False"
  HorizontalOptions="Center"
  Clicked="OnContinueTapped" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
