<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="GathernBusinessApp.SignInPage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  NavigationPage.HasNavigationBar="False"
  Padding="20">

    <VerticalStackLayout Spacing="20" VerticalOptions="CenterAndExpand">
        <Label
      Text="ادخل رقم الجوال"
      FontSize="28"
      FontAttributes="Bold"
      HorizontalTextAlignment="Center"/>
        <Label
      Text="سوف يصلك رمز التحقق لتسجيل الدخول او انشاء حساب جديد"
      FontSize="16"
      TextColor="Gray"
      HorizontalTextAlignment="Center"/>

        <Entry
      x:Name="PhoneEntry"
      Placeholder="05XXXXXXXX"
      Keyboard="Telephone"
      FontSize="18" />

        <Button
      Text="المتابعة"
      FontSize="20"
      BackgroundColor="#6200EE"
      TextColor="White"
      CornerRadius="12"
      Clicked="OnContinueTapped" />
    </VerticalStackLayout>
</ContentPage>
