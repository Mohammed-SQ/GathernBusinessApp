<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GathernBusinessApp.SignInPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White"
    NavigationPage.HasNavigationBar="False"
    Padding="20">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">

        <!-- Back Arrow -->
        <Button
      Grid.Row="0"
      Text="›"
      FontSize="30"
      BackgroundColor="Transparent"
      TextColor="Black"
      HorizontalOptions="End"
      Clicked="OnBackClicked"
      Margin="0,10,0,0" />

        <!-- Main Content -->
        <VerticalStackLayout
      Grid.Row="1"
      Spacing="20"
      VerticalOptions="Center"
      HorizontalOptions="FillAndExpand">

            <!-- Title -->
            <Label
        Text="ادخل رقم الجوال"
        FontSize="28"
        FontAttributes="Bold"
        TextColor="Black"
        HorizontalTextAlignment="Center" />

            <!-- Subtitle -->
            <Label
        Text="سوف يصلك رمز التحقق لتسجيل الدخول او إنشاء حساب جديد"
        FontSize="16"
        TextColor="Gray"
        HorizontalTextAlignment="Center" />

            <!-- Phone input with flag +966 -->
            <Frame
        BackgroundColor="#F5F5F5"
        CornerRadius="12"
        HasShadow="False"
        Padding="10"
        HorizontalOptions="FillAndExpand">
                <Grid ColumnDefinitions="Auto,Auto,*,Auto" VerticalOptions="Center">

                    <!-- Saudi flag -->
                    <Image
            Source="sa_flag.png"
            WidthRequest="24"
            HeightRequest="24"
            VerticalOptions="Center" />

                    <!-- Country code -->
                    <Label
            Text="+966"
            FontSize="16"
            TextColor="Black"
            VerticalOptions="Center"
            Margin="8,0,10,0" />

                    <!-- Phone entry -->
                    <Entry
            x:Name="PhoneEntry"
            Placeholder="5XXXXXXXX"
            Keyboard="Numeric"
            MaxLength="9"
            FontSize="18"
            TextColor="Black"
            VerticalOptions="Center"
            TextChanged="OnPhoneEntryTextChanged" />

                </Grid>
            </Frame>

            <!-- Continue button -->
            <Button
        x:Name="ContinueButton"
        Text="المتابعة"
        FontSize="20"
        BackgroundColor="#6200EE"
        TextColor="White"
        CornerRadius="12"
        HeightRequest="50"
        IsEnabled="False"
        Clicked="OnContinueTapped" />

        </VerticalStackLayout>

    </Grid>
</ContentPage>
